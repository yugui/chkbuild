#!/usr/bin/env ruby

require 'build'

Build.combination(["coretest"]) {
    |curr_dir, _|
  FileUtils.cp("/home/akr/ruby/head-ruby/ruby/ruby", "ruby")
  Build.run("./ruby", "-e", <<'End')
Process.setrlimit(Process::RLIMIT_CORE, Process::RLIM_INFINITY, Process::RLIM_INFINITY)
trap("SEGV", "DEFAULT")
Process.kill("SEGV", $$)
End
}
