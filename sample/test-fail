#!/usr/bin/env ruby

require 'chkbuild'

ChkBuild.def_target("fail") {|b|
  b.run("echo", "[bug]")
  b.run("false")
}

ChkBuild.define_title_hook('fail', nil) {|title, log|
  mark = ''
  mark << "[BUG]" if /\[BUG\]/i =~ log
  mark << "[SEGV]" if /Segmentation fault/i =~ log
  mark << "[FATAL]" if /\[FATAL\]/i =~ log
  title.update_title(:mark, mark)
}

ChkBuild.main
