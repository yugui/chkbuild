#!/usr/bin/env ruby

require 'chkbuild'

ChkBuild.limit(:data=>1024*1024*600, :as=>1024*1024*600)

gcc = ChkBuild::GCC.def_target(
  ["trunk", "4.1", "4.0"],
  :old => 1)

ChkBuild::Ruby.def_target(
  ["trunk", "1.8"],
  ["o0", "o1", nil, "o3"],
  [nil, "pth"],
  gcc,
  :old => 1,
  :separated_srcdir => true)

ChkBuild.main
